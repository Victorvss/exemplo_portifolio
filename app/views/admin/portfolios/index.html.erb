<p id="notice"><%= notice %></p>

<h1>Listing Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Degree</th>
      <th>Phone</th>
      <th>Professional history</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.name %></td>
        <td><%= portfolio.degree %></td>
        <td><%= portfolio.phone %></td>
        <td><%= portfolio.professional_history %></td>
        <td><%= portfolio.avatar %></td>
        <td><%= link_to 'Show', [:admin,portfolio] %></td>
        <td><%= link_to 'Edit', edit_admin_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', [:admin, portfolio], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

